<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/apply_icon_margin"
              android:layout_marginLeft="@dimen/apply_icon_margin"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:foreground="?attr/selectableItemBackgroundBorderless"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_item_apply_icon"
        android:layout_width="@dimen/apply_icon_size"
        android:layout_height="@dimen/apply_icon_size"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sorcery_icon_pack"/>

    <TextView
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:id="@+id/textView_item_apply_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        tools:text="1"/>
</LinearLayout>